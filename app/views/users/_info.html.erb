<div class="col-md-3">
<h1>User info</h1>


  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

  <table class="table">
   <tbody>
     <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
	   </tr>
	   <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
	   </tr>
</tbody>
</table>

  <%# if user.id == current_user.id %>

    <%= link_to  edit_user_path(user),class: "btn btn-secondary", method: :get do %>
     <i class="fas fa-user-cog"></i>
     <% end %>

    <%# else %>
    <%#= link_to "プロフィール編集", user_path(current_user.id) %>

  <%# end %>

  <h2>New book</h2>

<%= form_with model:book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% end %>
  </div>  <!-- この行を追加 -->
